    <!---  VISTAS convertidor de ruta a nombre PERFIL ADMINISTRADOR  -->
    <servlet>
        <servlet-name>perfil</servlet-name>
        <jsp-file>/Administrador/perfil.jsp</jsp-file>
    </servlet>
    
     <!---  VISTAS convertidor de ruta a nombre PERFIL CLIENTE  -->
     <servlet>
        <servlet-name>perfil</servlet-name>
        <jsp-file>/Cliente/perfil.jsp</jsp-file>
    </servlet>
    
    
    <!---  toma el nombre y lo convierte a ruta de navegador PERFIL ADMINISTRADOR -->
    <servlet-mapping>
        <servlet-name>perfil</servlet-name>
        <url-pattern>/Administrador</url-pattern>
        <url-pattern>/Administrador/perfil</url-pattern>
    </servlet-mapping>
    
    <!---  toma el nombre y lo convierte a ruta de navegador PERFIL CLIENTE -->
     <servlet-mapping>
        <servlet-name>perfil</servlet-name>
        <url-pattern>/Cliente</url-pattern>
        <url-pattern>/Cliente/perfil</url-pattern>
    </servlet-mapping>
    
    
    <!---  controladores  -->
    <!---  SINGNIN  -->
    <servlet>
        <servlet-name>SignIn</servlet-name>
        <servlet-class>Controlador.SignIn</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignIn</servlet-name>
        <url-pattern>/SignIn</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignIn</servlet-name>
        <url-pattern>/SignIn.do</url-pattern>
    </servlet-mapping>
    
    
    <!---  LOGOUT  -->
    
    <servlet>
        <servlet-name>LogOut</servlet-name>
        <servlet-class>Controlador.LogOut</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogOut</servlet-name>
        <url-pattern>/LogOut</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogOut</servlet-name>
        <url-pattern>/LogOut.do</url-pattern>
    </servlet-mapping>
    
    
    <!---  tiempo de sesion  -->
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    
    
    <!---  dependencia para persistencia  -->
    <dependency>
        <groupId>junit</groupId>
        <artifactId>junit</artifactId>
        <version>4.12</version>
        <scope>test</scope>
    </dependency>
</web-app>
